---
import { ViewTransitions } from 'astro:transitions';
import Header from '@/components/Header.astro';

interface Props {
  title: string;
  redirect?: string;
}

const { title, redirect } = Astro.props;
---

<!doctype html>
<html lang="en" class="font-[system-ui,sans-serif]">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="A simple url shortener to make your links look nice. Shorten, share and track your shortened links. URL shortener with analytics. Supports custom short links."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {redirect && <meta http-equiv="refresh" content={`0;url=${redirect}`} />}
    <ViewTransitions />
  </head>
  <body
    class="bg-gradient-to-b from-teal-900 to-80% to-zinc-900 min-h-screen flex justify-center"
  >
    <div class="max-w-[600px] w-full">
      <Header />
      <main class="p-4">
        <slot />
      </main>
    </div>
  </body>
</html>
