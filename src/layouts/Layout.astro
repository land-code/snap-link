---
import Action from '@/components/ui/Action.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;

// primary: teal
// secondary: zinc
---

<!doctype html>
<html lang="en" class="font-[system-ui,sans-serif]">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-gradient-to-b from-teal-900 to-80% to-zinc-900 min-h-screen flex justify-center"
  >
    <div class="max-w-[600px] w-full">
      <header class="absolute top-6 right-20">
        <nav>
          <Action as="a" href="/login"> Login </Action>
        </nav>
      </header>
      <slot />
    </div>
  </body>
</html>
