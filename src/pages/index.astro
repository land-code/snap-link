---
import ShortenerForm from '@/components/ShortenerForm.astro';
import Layout from '../layouts/Layout.astro';
import Typography from '@/components/ui/Typography.astro';
import PublicLinks from '@/components/PublicLinks.astro';
---

<Layout title="Snap Link - The easiest way to share links">
  <Typography as="h1">Snap Link</Typography>
  <div class="flex flex-col gap-8">
    <section>
      <Typography as="h2">Short a link</Typography>
      <ShortenerForm />
    </section>
    <section>
      <Typography as="h2">Public Links</Typography>
      <PublicLinks />
    </section>
  </div>
</Layout>
